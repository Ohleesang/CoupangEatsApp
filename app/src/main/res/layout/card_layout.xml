<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cardimageView"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/food1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cd_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="피자탑 강남 1호점"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardimageView" />

    <TextView
        android:id="@+id/cd_time_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="27~37분"
        android:textColor="#838383"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardimageView" />

    <TextView
        android:id="@+id/cd_score_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.9(12,343)	·2.3km"
        android:textColor="#838383"
        app:layout_constraintBottom_toBottomOf="@+id/cd_star"
        app:layout_constraintStart_toEndOf="@+id/cd_star"
        app:layout_constraintTop_toTopOf="@+id/cd_star" />

    <TextView
        android:id="@+id/cd_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="★ "
        android:textColor="#FFD500"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cd_name_textView"
        tools:ignore="DuplicateIds" />
</androidx.constraintlayout.widget.ConstraintLayout>